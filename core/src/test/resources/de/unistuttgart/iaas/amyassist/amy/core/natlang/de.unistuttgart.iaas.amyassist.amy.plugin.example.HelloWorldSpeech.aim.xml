<?xml version="1.0" encoding="utf-8"?>
<AmyInteractionModel>
	<Intent
		ref="de.unistuttgart.iaas.amyassist.amy.plugin.example.HelloWorldSpeech.sayHelloXTimes">
		<gram> say {greeting} {number} </gram>
		<EntityTemplates>
			<EntityTemplate id="number"/>
			<EntityTemplate id="greeting">
				<Values>
					<value> hello </value>
					<value> good morning </value>
				</Values>
			</EntityTemplate>
		</EntityTemplates>

		<Prompt entityTemplateId="number">
			<text> how many times should i say {greeting}? </text>
			<gram> {number} [times] </gram>
		</Prompt>
	</Intent>
</AmyInteractionModel>