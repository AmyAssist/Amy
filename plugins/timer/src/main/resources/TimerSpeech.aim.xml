<?xml version="1.0" encoding="utf-8"?>
<AmyInteractionModel>
	<Intent
		ref="de.unistuttgart.iaas.amyassist.amy.plugin.timer.TimerSpeech.setTimer">
		<gram>(set|create) timer (for|on|at) [{hour} hour] [{minute} minute] [{second}second]
		</gram>
		<EntityTemplates>
			<EntityTemplate id="hour" required="false">
				<gram>{amyinteger}</gram>
			</EntityTemplate>
			<EntityTemplate id="minute" required="false">
				<gram>{amyinteger}</gram>
			</EntityTemplate>
			<EntityTemplate id="second" required="false">
				<gram>{amyinteger}</gram>
			</EntityTemplate>
		</EntityTemplates>
	</Intent>
	<Intent
		ref="de.unistuttgart.iaas.amyassist.amy.plugin.timer.TimerSpeech.pauseTimer">
		<gram>pause timer {number}</gram>
		<EntityTemplates>
			<EntityTemplate id="number" required="true">
				<gram>{amyinteger}</gram>
			</EntityTemplate>
		</EntityTemplates>
	</Intent>
		<Intent
		ref="de.unistuttgart.iaas.amyassist.amy.plugin.timer.TimerSpeech.reactivateTimer">
		<gram>(resume|reactivate) timer {number}</gram>
		<EntityTemplates>
			<EntityTemplate id="number" required="true">
				<gram>{amyinteger}</gram>
			</EntityTemplate>
		</EntityTemplates>
	</Intent>
	<Intent
		ref="de.unistuttgart.iaas.amyassist.amy.plugin.timer.TimerSpeech.resetTimerObjects">
		<gram>delete all timers</gram>
	</Intent>
	<Intent
		ref="de.unistuttgart.iaas.amyassist.amy.plugin.timer.TimerSpeech.deleteTimerObject">
		<gram>delete timer {number}</gram>
		<EntityTemplates>
			<EntityTemplate id="number" required="true">
				<gram>{amyinteger}</gram>
			</EntityTemplate>
		</EntityTemplates>
	</Intent>
	<Intent
		ref="de.unistuttgart.iaas.amyassist.amy.plugin.timer.TimerSpeech.getTimerObject">
		<gram>get timer {number}</gram>
		<EntityTemplates>
			<EntityTemplate id="number" required="true">
				<gram>{amyinteger}</gram>
			</EntityTemplate>
		</EntityTemplates>
	</Intent>
	<Intent
		ref="de.unistuttgart.iaas.amyassist.amy.plugin.timer.TimerSpeech.getAllTimerObjects">
		<gram>get all timers</gram>
	</Intent>
	<Intent
		ref="de.unistuttgart.iaas.amyassist.amy.plugin.timer.TimerSpeech.getRemainingTimerDelay">
		<gram>when (does|is) timer {number} (ringing|ring)</gram>
		<EntityTemplates>
			<EntityTemplate id="number" required="true">
				<gram>{amyinteger}</gram>
			</EntityTemplate>
		</EntityTemplates>
	</Intent>

</AmyInteractionModel>