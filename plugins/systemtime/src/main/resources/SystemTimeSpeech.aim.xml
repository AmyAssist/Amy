<?xml version="1.0" encoding="utf-8"?>
<AmyInteractionModel>
	<Intent
		ref="de.unistuttgart.iaas.amyassist.amy.plugin.systemtime.SystemTimeSpeech.time">
		<gram>[what|tell me the] time [is it]</gram>
	</Intent>
	<Intent
		ref="de.unistuttgart.iaas.amyassist.amy.plugin.systemtime.SystemTimeSpeech.date">
		<gram>[what] [is the] (date|day) [is] [today]</gram>
	</Intent>
	<Intent
		ref="de.unistuttgart.iaas.amyassist.amy.plugin.systemtime.SystemTimeSpeech.year">
		<gram>[what] year [do we have|is it|are we living in]</gram>
	</Intent>
	<Intent
		ref="de.unistuttgart.iaas.amyassist.amy.plugin.systemtime.SystemTimeSpeech.dayOfWeek">
		<gram>[what] (week day|day [of the] week) [do we have|is|was] [the] [{date}]</gram>
		<EntityTemplates>
			<EntityTemplate id="year" required="false">
				<gram>{amyyear}</gram>
			</EntityTemplate>
			<EntityTemplate id="date" required="true">
				<gram>([{amydayofweek} [the]] {amydayofmonth} [of] {amymonth} [{year}]|tomorrow|today)</gram>
			</EntityTemplate>
		</EntityTemplates>
		<Prompt entityTemplateId="date">
			<text>At which date?</text>
			<gram>{date}</gram>
		</Prompt>
	</Intent>
	<Intent
		ref="de.unistuttgart.iaas.amyassist.amy.plugin.systemtime.SystemTimeSpeech.howManyDays">
		<gram>How many days [have passed] {time} [the {date}]</gram>
		<EntityTemplates>		
			<EntityTemplate id="time" required="true">
				<gram>(until|since)</gram>
			</EntityTemplate>
			<EntityTemplate id="year" required="false">
				<gram>{amyyear}</gram>
			</EntityTemplate>
			<EntityTemplate id="date" required="true">
				<gram>([{amydayofweek} [the]] {amydayofmonth} [of] {amymonth} [{year}]|tomorrow|today)</gram>
			</EntityTemplate>
		</EntityTemplates>
		<Prompt entityTemplateId="date">
			<text>Which date?</text>
			<gram>{date}</gram>
		</Prompt>
	</Intent>
</AmyInteractionModel>